<script>
    function editFunction(){

// document.getElementById('edit').onclick = function() {

       console.log("function called");

   const collection = document.getElementsByClassName("font-weight-normal");
   for (let i = 0; i < collection.length; i++) {
   collection[i].style.display = "none";
   }
   const collection_input = document.getElementsByClassName("form-control");
   for (let i = 0; i < collection_input.length; i++) {
   collection_input[i].style.display = "";
   }
   
   document.getElementById('submit_btn').style.display='';
   document.getElementById('head_title').innerHTML='Update Profile';


   }
</script>


