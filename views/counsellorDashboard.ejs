        <div id="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col">

                    <div class="container">

                        <form class="row" action='/updateCounsellorDetails' method="POST" >
            
                            <div class="card-body">
                                <img src="uploads/<%= counsellor.image %>" class="center-cropped mb-3" style="border-radius: 50%;" alt="profile image"/>
                                <h1 id="head_title" class="font-weight-bold mb-3">Profile</h1>

                                
                                <div class="row mb-3">                                    
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.name%></h5>
                                        <input type="text" style="display: none;" name="name" value="<%=counsellor.name%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.email%></h5>
                                        <input disabled type="text" style="display: none;" value="<%=counsellor.email%>"  class="form-control">
                                    </div>
                                </div>
                  <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Age</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.age%></h5>
                                        <input type="text" style="display: none;" name="age" value="<%=counsellor.age%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.phone%></h5>
                                        <input type="text" style="display: none;" name="phone" value="<%=counsellor.phone%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.address%></h5>
                                        <input type="text" style="display: none;" name="address" value="<%=counsellor.address%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Qualification</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.qualification%></h5>
                                        <input type="text" style="display: none;" name="qualification" value="<%=counsellor.qualification%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">About you</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <h5 class="font-weight-normal" style="display: ;"><%=counsellor.description%></h5>
                                        <input type="text" style="display: none;" name="description" value="<%=counsellor.description%>" class="form-control">
                                    </div>
                                </div>
                                
                                
                  
                  <br>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <button type="submit" id="submit_btn" class="btn btn-primary px-4" style="display: none;" >Save Changes</button>
                                    </div>
                                </div>
                            </div>
            
                        </form>
                            
                        <i onclick="editFunction()" class='far fa-edit' style='font-size:36px'></i>
                    </div>


                    <!-- <h1 class="font-weight-bold">Profile</h1>
                    <img src="uploads/<%= counsellor.image %>" class="center-cropped" style="border-radius: 50%;" alt="profile image"/>
                    <h2 class="font-weight-normal mt-2"><%=counsellor.name%></h1>
                    <h4 class="d-block"><%= counsellor.qualification %></h4>
                    <h4 class="d-block"> <%= counsellor.description%></h4> -->

                </div>

            <div class="col-sm-4 col-md-4 mt-3">
                <div class="list-group">
                    <h2>Appointments</h2>
                    <%if(appointments.length!=0){%>
                        <%appointments.forEach(appointment => {%>
                    <a  class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 text-muted">You have an appointment with <%=appointment.user.name%> on <%=appointment.date%> at <%=appointment.time%> O'clock </h5>
                              
                        </div>
                            <div class="text-center">
                                <form method="POST" action="/deleteAppointment">
                                    <input type="text" style="display: none;" name="appointment_id" value="<%=appointment._id%>"/>
                                    <input type="text" style="display: none;" name="time" value="<%=appointment.time%>"/>
                                    <input type="text" style="display: none;" name="date" value="<%=appointment.date%>"/>
                                    <button class="btn btn-danger btn-block" type="submit">CANCEL</button>  
                                </form>
                            </div>
                    </a>

                    <%})}else{%>
                        <a class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 text-muted">You have an no appointment till now.</h5>
                                </div>
                        </a>
                    <%}%>
                    
                </div>
            </div>
        </div>

        </div>
    </div>






</div>
</body>
