        <div id="content">

        <div class="container">

            <div class="row">

                <div class="col-sm-12 col-md-8 ">
                    <h1>Counsellors</h1>
                    <%counsellors.forEach(counsellor=>{%>
                        <div class="card mt-3 ml-2" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=counsellor.name%>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <%= counsellor.qualification %>
                                </h6>
                                <p class="card-text">
                                    <%= counsellor.description%>
                                    <form action="/setAppointment" method="GET">
                                        <input type="text" style="display: none;" name="counsellor_id" value="<%=counsellor._id%>"/>
                                        <button href="#" type="submit" class="card-link d-block btn btn-primary">Book Appointment</button>
                                    </form>

                            </div>
                        </div>
                        <%})%>

                </div>

            <div class="col-sm-4 col-md-4 mt-3">
                <div class="list-group">
                    <h2>Appointments</h2>
                    <%if(appointments.length!=0){%>
                        <%appointments.forEach(appointment => {%>
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">You have an appointment with <%=appointment.counsellor.name%> on <%=appointment.date%> at <%=appointment.time%> O'clock </h5>
                            </div>
                    </a>

                    <%})}else{%>
                        <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">You have an no appointment till now.</h5>
                                </div>
                        </a>
                    <%}%>
                    
                </div>
            </div>
        </div>

        </div>
